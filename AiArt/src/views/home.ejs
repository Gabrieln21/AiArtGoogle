<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8" />
    <title>Irene Carvajal – Art & Experiments</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Lora:ital@0;1&display=swap" rel="stylesheet">
    <style>
        body { font-family: Inter, sans-serif; }

        .masonry-grid {
            column-count: 3;
            column-gap: 20px;
            column-fill: balance;
        }

        @media (max-width: 1024px) {
            .masonry-grid { column-count: 2; }
        }

        @media (max-width: 640px) {
            .masonry-grid { column-count: 1; }
        }

        .masonry-item {
            break-inside: avoid;
            margin-bottom: 20px;
            display: inline-block;
            width: 100%;
        }

        .hover-scale {
            transition: transform 0.2s ease;
        }

        .hover-scale:hover {
            transform: scale(1.01);
        }
    </style>
</head>

<body class="h-full bg-white text-gray-800 antialiased">
<!-- ========== SIDEBAR ========== -->
<aside class="fixed inset-y-0 left-0 w-60 px-8 pt-10 border-r border-gray-200 bg-white flex flex-col justify-between">
    <div>
        <h1 class="text-xl font-semibold tracking-wide text-gray-900">irene&nbsp;carvajal</h1>
        <p class="text-sm text-gray-500 mt-1">artist | educator | curator</p>

        <nav class="mt-10 space-y-4 font-medium">
            <a href="/" class="text-gray-900 block">portfolio</a>
            <a href="/archive" class="text-gray-500 hover:text-gray-900 block transition-colors">archive</a>
            <a href="/about" class="text-gray-500 hover:text-gray-900 block transition-colors">about the artist</a>
            <a href="/contact" class="text-gray-500 hover:text-gray-900 block transition-colors">contact</a>
        </nav>
    </div>

    <div class="pb-8 flex space-x-5 text-gray-500">
        <a href="mailto:hello@example.com" class="hover:text-gray-900 transition-colors"><i class="fas fa-envelope"></i></a>
        <a href="https://instagram.com" class="hover:text-gray-900 transition-colors"><i class="fab fa-instagram"></i></a>
        <a href="https://vimeo.com" class="hover:text-gray-900 transition-colors"><i class="fab fa-vimeo-v"></i></a>
    </div>
</aside>

<!-- ========== MAIN ========== -->
<main class="ml-60 min-h-screen px-8 py-10">
    <!-- Interactive Section -->
    <section class="mb-12">
        <h1 class="text-2xl font-semibold text-gray-900 mb-2">Participate in the art!</h1>
        <h3 class="text-lg text-gray-600 mb-8">Explain the piece..</h3>

        <form id="genForm" class="max-w-2xl space-y-4" enctype="multipart/form-data">
            <!-- Primary creative prompt -->
            <input
                    id="promptInput"
                    name="prompt"
                    type="text"
                    placeholder="Main image description…"
                    class="w-full border border-gray-300 px-4 py-3 rounded-md text-base focus:border-gray-500 focus:ring-0 transition-colors"
            />

            <!-- Last Google Search -->
            <input
                    id="lastSearchInput"
                    name="lastSearch"
                    type="text"
                    placeholder="Your last Google search (optional)"
                    class="w-full border border-gray-300 px-4 py-3 rounded-md text-base focus:border-gray-500 focus:ring-0 transition-colors"
            />


            <!-- Optional file upload -->
            <input
                    id="fileInput"
                    name="files"
                    type="file"
                    multiple
                    class="w-full border border-gray-300 px-3 py-2 rounded-md file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:bg-gray-100 file:text-gray-700 hover:file:bg-gray-200"
            />

            <!-- Submit -->
            <button
                    id="genBtn"
                    type="submit"
                    class="w-full px-4 py-3 bg-gray-900 text-white rounded-md hover:bg-gray-800 text-base transition-colors"
            >
                Generate
            </button>
        </form>

        <p id="status" class="text-sm text-gray-500 mt-2 hidden"></p>
    </section>

    <!-- Gallery -->
    <section id="gallery" class="masonry-grid">
        <% (images || []).forEach(img => { %>
            <div class="masonry-item">
                <img
                        src="<%= img.publicUrl %>"
                        alt="<%= img.prompt %>"
                        data-url="<%= img.publicUrl %>"
                        data-prompt="<%= img.prompt %>"
                        onclick="openModal(this)"
                        class="w-full rounded hover-scale shadow-sm cursor-pointer"
                        loading="lazy"
                />
            </div>
        <% }) %>
    </section>

</main>

<!-- Scripts -->
<script>
    const form = document.getElementById('genForm');
    const input = document.getElementById('promptInput');
    const files = document.getElementById('fileInput');
    const status = document.getElementById('status');
    const gallery = document.getElementById('gallery');

    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const userInput = input.value.trim();
        const lastSearch = document.getElementById('lastSearchInput').value.trim();  // 👈 Add this
        if (!userInput) return;

        status.textContent = 'Creating… ⏳';
        status.classList.remove('hidden');

        try {
            const body = new FormData();
            body.append('prompt', userInput);
            body.append('lastSearch', lastSearch);  // 👈 And add this
            [...files.files].forEach(f => body.append('files', f));

            const res = await fetch('/api/generate', { method: 'POST', body });
            if (!res.ok) {
                const errorData = await res.text();
                throw new Error(errorData);
            }
            const data = await res.json();

            // Create new masonry item
            const masonryItem = document.createElement('div');
            masonryItem.className = 'masonry-item';

            const img = document.createElement('img');
            img.src = data.localPath || data.url;
            img.alt = data.prompt;
            img.dataset.url = img.src;
            img.dataset.prompt = data.prompt;
            img.onclick = () => openModal(img);
            img.className = 'w-full rounded hover-scale shadow-sm cursor-pointer';

            masonryItem.appendChild(img);
            gallery.insertBefore(masonryItem, gallery.firstChild);

            form.reset();
            status.textContent = 'Added!';
            setTimeout(() => status.classList.add('hidden'), 1500);
        } catch (err) {
            console.error(err);
            status.textContent = 'Error: ' + err.message;
            status.className = 'text-sm text-red-600 mt-2';
        }
    });
</script>

<!-- Image Modal -->
<div id="imageModal" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-50 hidden">
    <div class="relative bg-white rounded-md shadow-lg max-w-3xl w-full mx-4">
        <button id="closeModal" class="absolute top-2 right-2 text-gray-600 hover:text-black text-xl font-bold z-10 w-8 h-8 flex items-center justify-center">&times;</button>
        <img id="modalImage" src="" alt="" class="w-full rounded-t-md max-h-[70vh] object-contain">
        <div class="p-4 text-gray-700 text-sm" id="modalPrompt"></div>
    </div>
</div>

<script>
    function openModal(img) {
        const modal = document.getElementById('imageModal');
        const modalImage = document.getElementById('modalImage');
        const modalPrompt = document.getElementById('modalPrompt');

        modalImage.src = img.dataset.url;
        modalPrompt.textContent = img.dataset.prompt;
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden'; // Prevent background scrolling
    }

    function closeModal() {
        const modal = document.getElementById('imageModal');
        modal.classList.add('hidden');
        document.body.style.overflow = 'auto'; // Restore scrolling
    }

    // Close modal when clicking the X button
    document.getElementById('closeModal').addEventListener('click', closeModal);

    // Close modal when clicking outside the image
    document.getElementById('imageModal').addEventListener('click', (e) => {
        if (e.target.id === 'imageModal') {
            closeModal();
        }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === "Escape") {
            closeModal();
        }
    });
</script>

<!-- Font Awesome -->
<script src="https://kit.fontawesome.com/4ad52d1665.js" crossorigin="anonymous"></script>

</body>
</html>